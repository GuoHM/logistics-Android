<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/userField"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_x="86dp"
        android:layout_y="20dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/userLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="42dp"
        android:text="用户名：" />

    <TextView
        android:id="@+id/passwordLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="11dp"
        android:layout_y="108dp"
        android:text="密码：" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_x="90dp"
        android:layout_y="86dp"
        android:ems="10"
        android:inputType="textPassword" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="142dp" >

        <RadioButton
            android:id="@+id/radioDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="区县营业点" />

        <RadioButton
            android:id="@+id/radioAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员" />

        <RadioButton
            android:id="@+id/radioProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省分拣中心" />

    </RadioGroup>

    <Button
        android:id="@+id/ok"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_x="64dp"
        android:layout_y="266dp"
        android:text="确认" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_x="174dp"
        android:layout_y="272dp"
        android:text="取消" />

</AbsoluteLayout>