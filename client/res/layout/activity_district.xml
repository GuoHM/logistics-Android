<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DistrictMainActivity" >

     <Button
        android:id="@+id/district_modifyprint"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_x="72dp"
        android:layout_y="40dp"
        android:text="修改/打印" />
    <Button
        android:id="@+id/district_sort"
        android:layout_width="155dp"
        android:layout_height="64dp"
        android:layout_x="75dp"
        android:layout_y="130dp"
        android:text="分拣" />

    <Button
        android:id="@+id/district_exit"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_x="72dp"
        android:layout_y="337dp"
        android:text="退出登陆" />

    <Button
        android:id="@+id/district_send"
        android:layout_width="155dp"
        android:layout_height="62dp"
        android:layout_x="65dp"
        android:layout_y="239dp"
        android:text="派送" />

    <TextView
        android:id="@+id/district_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="13dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</AbsoluteLayout>